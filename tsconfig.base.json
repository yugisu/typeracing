{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["esnext"],
    "strict": true,
    "allowJs": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "client": ["./client"],
      "server": ["./server"],
      "shared": ["./shared"]
    },
    "outDir": "build",
    "sourceMap": true
  }
}
